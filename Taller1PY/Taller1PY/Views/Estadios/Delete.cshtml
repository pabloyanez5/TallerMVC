@model Taller1PY.Models.Estadio

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <h1 class="text-center">Eliminar Estadio</h1>
    <hr />
    <h3 class="text-center">¿Está seguro de que desea eliminar esto?</h3>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h4>Estadio</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Direccion)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Direccion)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Ciudad)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Ciudad)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Capacidad)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Capacidad)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between">
                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
                </div>
            </form>
        </div>
    </div>
</div>
